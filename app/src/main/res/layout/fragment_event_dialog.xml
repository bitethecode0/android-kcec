<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="date"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/date_dialog"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:background="#cce0ff"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/event_list_dialog"
        android:layout_below="@+id/date_dialog"

        android:gravity="center|start"

        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/newEvent_dialog"
        android:layout_below="@+id/event_list_dialog">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:id="@+id/plus_icon_dialog"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/plus_icon_dialog"
            android:id="@+id/newEvent_btn_dialog"
            android:text="New event"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>