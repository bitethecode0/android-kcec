<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relLayout1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_image_qanda"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_default_image"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/username_qanda"
            android:text="username"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/profile_image_qanda"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_qanda"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="posted date"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout2"
        android:layout_below="@id/relLayout1">

        <EditText
            android:id="@+id/question_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="text"
            android:hint="Your topic.."/>


        <EditText
            android:id="@+id/question_description"
            android:layout_below="@+id/question_topic"
            android:hint="Your question.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"

            android:textSize="18sp"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <TextView
        android:id="@+id/newQuestion_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Sumbit"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>




</RelativeLayout>